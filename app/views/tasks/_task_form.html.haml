.modal-header
	%h1 
		= task.new_record? ? 'New Task' : "Editing #{task.title}"
= simple_form_for task, class: 'clearfix', remote: true do |f|
	.modal-body
		= f.input :title
		= f.input :note
		= f.input :room
		%p
			Time
		= f.select :time, [['<7:00AM'],['7:00AM'],['7:30AM'],['8:00AM'],['8:30AM'],['9:00AM'],['9:30AM'],['10:00AM'],['10:30AM'],['11:00AM'],['11:30AM'],['12:00PM'],['12:30PM'],['1:00PM'],['1:30PM'],['2:00PM'],['2:30PM'],['3:00PM'],['3:30PM'],['4:00PM'],['4:30PM'],['5:00PM'],['5:30PM'],['>5:30PM']]
		%p
			Urgency
		= f.select :urgency, [['Urgent','urgent'],['Medium','medium'],['Low','low']]
		= f.input :completed, as: :string, input_html: {class: 'datepicker', value: task.completed.present? ? localize(task.completed, format: '%dd/%mm/%Y') : nil}
	.modal-footer
		= f.submit 'Save', class: 'btn btn-primary'
